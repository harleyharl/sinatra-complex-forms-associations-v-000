<h1>Edit <%=@pet.name%>'s Details</h1>

<form action="/pets" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label>New Name:</label>

  <br>

  <input type="text" name="pet[name]" id="pet_name">

  <br>

  <label>Change The Owner:</label>

  <%@owners.each do |owner|%>
    <input type="checkbox" name="pet[owner_id][]" id="<%=owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner.include?(owner) %>><%=owner.name%></input>
  <%end%>

  <br>


  <br>

    <label>and/or, create a new owner:</label>
    <br>
    <label>name:</label>
      <input  type="text" name="owner_name"></input>
    <br>
  <input type="submit" value="Create Pet">
</form>
